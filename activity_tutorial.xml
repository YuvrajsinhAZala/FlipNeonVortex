<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW TO PLAY"
            android:textColor="#39FF14"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:shadowColor="#39FF14"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20" />

        <!-- Controls Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTROLS"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. GRAVITY FLIP"
            android:textColor="#39FF14"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap anywhere on the screen to reverse gravity. Use this to dodge obstacles instantly!"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. MOVEMENT"
            android:textColor="#00FFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drag the JOYSTICK on the RIGHT side to move forward, backward, or fast-fall. Master your momentum!"
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Power Ups Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWER UPS"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00FFFF"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHIELD: Protects from one hit.\nExplodes enemies on impact!"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="32dp">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#9D00FF"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SLOW MO: Time slows down.\nDodging becomes easier."
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/gotItButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="GOT IT!"
            android:textSize="24sp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
